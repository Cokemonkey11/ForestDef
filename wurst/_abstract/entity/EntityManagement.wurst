package EntityManagement
import public Entity
import Buff

function updateEntities()
	for e in Entity
		if e.active
			e.update()
		if e.done
			destroy e
		
	for b in Buff
		b.update()
		if b.done
			destroy b
			
			
public function startEntityLoop() returns boolean
	getTimer().startPeriodic(0.03, function updateEntities)
	return true